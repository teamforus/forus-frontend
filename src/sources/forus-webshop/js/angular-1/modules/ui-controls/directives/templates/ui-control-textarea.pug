.ui-control.ui-control-textarea(ng-class="$dir.class")
    textarea(
        rows="{{ $dir.rows }}" 
        id="{{ $dir.id }}" 
        name="{{ $dir.name }}" 
        ng-change="$dir.onChange()"
        placeholder="{{ $dir.placeholder }}" 
        ng-model="ngModel").form-control
    label(for="{{ $dir.id }}" ng-click="$dir.clear()").ui-control-clear: .mdi.mdi-close-circle
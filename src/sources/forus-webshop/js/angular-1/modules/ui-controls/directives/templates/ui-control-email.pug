.ui-control.ui-control-text(ng-class="$dir.class")
    input(
        type="email" 
        id="{{ $dir.id }}" 
        name="{{ $dir.name }}" 
        dusk="{{ $dir.inputDusk }}" 
        ng-change="$dir.onChange()"
        ng-attr-tabindex="{{ $dir.tabindex }}"
        placeholder="{{ $dir.placeholder }}" 
        ng-model="ngModel").form-control
    .ui-control-clear(for="{{ $dir.id }}" ng-click="$dir.clear()" aria-label="cancel"): .mdi.mdi-close-circle
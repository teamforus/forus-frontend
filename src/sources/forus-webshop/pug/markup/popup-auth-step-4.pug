extends ../layout/layout

block vars
    - var modal_shown=true
    
block content
    header.section.section-header
        include ../layout/includes/top-navbar

    - for (var i = 0; i < 32; i++)
        br

    .popups
        .popup.popup-auth
            .popup-backdrop
            .popup-content
                .popup-close.mdi.mdi-close

                .popup-title Aanmelden
                .popup-subtitle Please enter your e-mail address in order to receive your login details.

                .form
                    .form-group
                        .form-label Enter your email
                        input(type="email" placeholder="E-mail").form-control.form-control
                    .form-group
                        .form-label Pin code
                        input(type="text" placeholder="Pin Code").form-control
                    .form-group
                        .form-label Activation code
                        input(type="text" placeholder="Activation code").form-control
                    .form-group
                    .form-group: button.button.button-primary.button-fill SUBMIT

                .popup-footer
                    .footer-text U kunt tot 14:55 uur (Nederlandse tijd) inloggen. Daarna verloopt uw sessie.
                    .popup-footer-links
                        a(href="#").popup-footer-link 
                            span »

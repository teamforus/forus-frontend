.header-splash: .splash.splash-d

header.section.section-header.section-header-voucher: .wrapper
    top-navbar
    
    // .header-body
        .header-content
            div(ng-if="!$ctrl.voucherCard.product")
                .header-title {{ "voucher.header.title" | translate }}
                div(ng-click="$ctrl.sendVoucherEmail($ctrl.voucher)" ng-bind="'voucher.buttons.send' | translate").button.button-primary

            .block.block-product.block-product-sm(ng-if="$ctrl.voucherCard.product")
                .product-card
                    .product-details
                        .product-photo(style="background-image: url('{{ $ctrl.voucherCard.product.photo.sizes.large || './assets/img/placeholders/product-large.png' }}')")
                            img(ng-src="{{ $ctrl.voucherCard.product.photo.sizes.large || './assets/img/placeholders/product-large.png' }}", alt="")
                        .product-name(ng-bind="$ctrl.voucherCard.product.name")
                        .product-categories(ng-bind="$ctrl.voucherCard.product.product_category.name")
                        
                        .product-funds
                            .product-fund-label {{ "voucher.labels.fund" | translate }}
                            .product-fund-list(ng-bind="$ctrl.voucherCard.fund.name")

                        .product-price
                            .product-price-new(ng-bind="$ctrl.voucherCard.amount | currency_format") 
                            //- .product-price-old € 59,95

                        .product-expire(ng-if="$ctrl.voucherCard.expire_at")
                            .expire-label {{ "voucher.labels.expire" | translate }}
                            .expire-value(ng-bind="$ctrl.voucherCard.expire_at_locale")
                            
                        a(ui-sref="products-show($ctrl.voucherCard.product)").product-details-link
                            | {{ "voucher.buttons.details" | translate }}
                            .mdi.mdi-arrow-right
                    .product-footer
                        .product-provider-label {{ "voucher.labels.shopdetail" | translate }}
                        div(ng-repeat="office in $ctrl.voucherCard.offices").product-provider
                            .product-provider-value(ng-bind="office.organization.name")
                            .product-provider-details
                                div(ng-if="office.address")
                                    | Adres: {{ office.address }}
                                div(ng-if="office.phone")
                                    | Telefoon: {{ office.phone }}
        .header-content
            .block.block-voucher
                .voucher-details
                    .voucher-title(ng-bind="$ctrl.voucherCard.title")
                    .voucher-subtitle(ng-bind="$ctrl.voucherCard.subtitle")
                    .voucher-value(ng-bind="$ctrl.voucherCard.amount | currency_format")
                .voucher-qr-code: .voucher-qr-code_inner#voucher_qr

    // .block.block-show-more(ng-if="$ctrl.voucherCard.product")
        div(ng-click="$ctrl.sendVoucherEmail($ctrl.voucher)" ng-bind="'voucher.buttons.send' | translate").button.button-primary

section.section.section-voucher-details: .wrapper
    .section-title Uw voucher
    .block.block-voucher(ng-class="$ctrl.voucherCard.product?'':'block-voucher-regular'")
        // regular voucher
        div(ng-if="!$ctrl.voucherCard.product").base-card.base-card-sponsor: .card-inner
            .card-body
                .card-photo: img(ng-src="{{ $ctrl.voucherCard.fund.organization.logo.sizes.large || './assets/img/placeholders/organization-large.png' }}", alt="")
                .card-section
                    .card-title {{ "voucher.voucher_card.header.title" | translate }}
                    .card-description {{ "voucher.voucher_card.labels.description" | translate }}
            .card-footer
                .card-label {{ "voucher.voucher_card.labels.contact" | translate }}
                .card-value(ng-bind="$ctrl.voucherCard.fund.organization.name")
                .card-value.card-value-sm
                    | E-mailadres: 
                    strong(ng-bind="$ctrl.voucherCard.fund.organization.email")
                    br
                    | Telefoonnummer: 
                    strong(ng-bind="$ctrl.voucherCard.fund.organization.phone")

        // product voucher
        div(ng-if="$ctrl.voucherCard.product").base-card.base-card-sponsor: .card-inner
            .card-body
                .card-photo: img(ng-src="{{ $ctrl.voucherCard.product.organization.logo.sizes.large || './assets/img/placeholders/organization-large.png' }}", alt="")
                .card-section
                    .card-title {{ "voucher.voucher_card.header.title" | translate }}
                    .card-description {{ "voucher.voucher_card.labels.desc" | translate }}
            .card-footer
                .card-label {{ "voucher.voucher_card.labels.contact" | translate }}
                .card-value(ng-bind="$ctrl.voucherCard.product.organization.name")
                .card-value.card-value-sm
                    | E-mailadres: 
                    strong(ng-bind="$ctrl.voucherCard.product.organization.email")
                    br
                    | Telefoonnummer: 
                    strong(ng-bind="$ctrl.voucherCard.product.organization.phone")
        
        // voucher details
        .base-card.base-card-voucher
            .card-inner
                .card-body.flex-row
                    // product voucher
                    .card-photo(ng-if="$ctrl.voucherCard.product")
                        img(ng-src="{{ $ctrl.voucherCard.product.photo.sizes.small || './assets/img/placeholders/product-large.png' }}")
                    
                    // regular voucher
                    .card-photo(ng-if="!$ctrl.voucherCard.product")
                        img(ng-src="{{ $ctrl.voucherCard.fund.logo.sizes.large || './assets/img/placeholders/fund-large.png' }}")

                    .card-section
                        //-.label.label-success Ongebruikt
                        .card-title(ng-bind="$ctrl.voucherCard.product ? $ctrl.voucherCard.product.name : $ctrl.voucherCard.fund.name")
                        a(ng-if="$ctrl.voucherCard.product" ui-sref="products-show($ctrl.voucherCard.product)").card-read_more 
                            | Bekijk details
                            em.mdi.mdi-arrow-right
                        div(ng-if="!$ctrl.voucherCard.product")
                            .card-label Budget
                            .card-value(ng-bind="'€ ' + ($ctrl.voucherCard.amount)") 

                .card-footer
                    .card-section
                        .card-label Verzilver deze voucher voor:
                        .card-value(ng-bind="$ctrl.voucherCard.expire_at_locale")
                    .card-actions
                        .action-item(ng-if="$ctrl.voucherCard.product")
                            .action-item-icon
                                em.mdi.mdi-share-variant
                                .action-item-tooltip Deel de voucher met de aanbieder
                            .action-item-name DEEL
                        .action-item(ng-click="$ctrl.sendVoucherEmail($ctrl.voucher)")
                            .action-item-icon
                                em.mdi.mdi-email-outline
                                .action-item-tooltip E-mail de voucher naar u zelf
                            .action-item-name EMAIL
                        .action-item(ng-click="$ctrl.printQrCode()")
                            .action-item-icon
                                em.mdi.mdi-printer
                                .action-item-tooltip Print de voucher uit
                            .action-item-name PRINT
            .card-qr_code
                #voucher_qr
                .card-qr_code-desc Deze QR-code representeert uw aanbieding

    .block.block-transactions(ng-if="$ctrl.voucherCard.transactions.length > 0 && !$ctrl.voucherCard.product")
        .transactions-header: .transactions-title {{ "voucher.labels.transactions" | translate }}
        .transactions-body: .transactions-list
            .transactions-item(ng-repeat="transaction in $ctrl.voucherCard.transactions" class="transactions-item-out")
                .transactions-item-icon: em.mdi.mdi-arrow-up
                .transactions-item-details
                    .transactions-item-counterpart(ng-if="transaction.type == 'transaction'") 
                        | {{ transaction.organization.name }}
                    .transactions-item-counterpart(ng-if="transaction.type == 'product_voucher'") 
                        | {{ "Product voucher: " | translate }} {{ transaction.product.name }}
                    .transactions-item-date {{ transaction.created_at_locale }}
                .transactions-item-amount 
                    .transactions-item-value - {{ transaction.amount | currency_format }}
                    .transactions-item-type {{ "voucher.labels.subtract" | translate }}

    block-products(
    ng-if="$root.appConfigs.features.products.list"
    sample="true"
    products="$ctrl.products"
    product-categories="$ctrl.productCategories")

    .block.block-map_card
        .map_card-header
            .map_card-title {{ "voucher.labels.office" | translate }}
            .map_card-subtitle {{ "voucher.labels.voucher" | translate }}

        .map_card-iframe: google-map(offices="$ctrl.voucherCard.offices")


section.section.section-details: .wrapper
    .block.block-breadcrumbs
        a(ui-sref="home").breadcrumb-item Home
        .breadcrumb-item.active(i18n="Privacyverklaring")

    .block.block-markdown(
        ng-class="'block-markdown-' + $ctrl.page.content_alignment"
        ng-if="$ctrl.description_html" 
        ng-bind-html="$ctrl.description_html")

    .section-title.text-left(
        ng-if="!$ctrl.description_html" 
        translate="privacy.{{$root.client_key}}.title" 
        translate-default="{{ 'privacy.title' | translate }}")
    
    .block.block-accessibility(ng-if="!$ctrl.description_html")
        .block-text
           p.description(translate="privacy.{{$root.client_key}}.one" translate-default="{{ 'privacy.one' | translate }}")

        .block-text
            .title(translate="privacy.{{$root.client_key}}.title_two" translate-default="{{ 'privacy.title_two' | translate }}")
            .description(translate="privacy.{{$root.client_key}}.two" translate-default="{{ 'privacy.two' | translate }}")
                 
        .block-text
            .title(translate="privacy.{{$root.client_key}}.title_three" translate-default="{{ 'privacy.title_three' | translate }}")
            .description(translate="privacy.{{$root.client_key}}.three" translate-default="{{ 'privacy.three' | translate }}")

        .block-text
            .title(translate="privacy.{{$root.client_key}}.title_four" translate-default="{{ 'privacy.title_four' | translate }}")
            .description(translate="privacy.{{$root.client_key}}.four" translate-default="{{ 'privacy.four' | translate }}")

        .block-text
            .title(translate="privacy.{{$root.client_key}}.title_five" translate-default="{{ 'privacy.title_five' | translate }}")
            .description(translate="privacy.{{$root.client_key}}.five" translate-default="{{ 'privacy.five' | translate }}")

        .block-text
            .title(translate="privacy.{{$root.client_key}}.title_six" translate-default="{{ 'privacy.title_six' | translate }}")

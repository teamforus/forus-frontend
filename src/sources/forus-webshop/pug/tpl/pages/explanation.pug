.page.page-home
    .block.block-steps(ng-if="$ctrl.description_html"): .wrapper
        .block.block-breadcrumbs
            a(ui-sref="home").breadcrumb-item Home
            .breadcrumb-item.active Uitleg
        .block-steps-description: .block.block-markdown(
            ng-class="'block-markdown-' + $ctrl.page.content_alignment"
            ng-bind-html="$ctrl.description_html")

    section.section.section-steps#steps(ng-if="!$ctrl.description_html"): .wrapper
        .block.block-breadcrumbs
            a(ui-sref="home").breadcrumb-item Home
            .breadcrumb-item.active Uitleg
        
        .section-splash
        .section-sprite
        .section-title(i18n="home.guide.title")
        .steps
            .step-item: .step-item-content
                h4(translate="home.guide.stepone")
                p(translate="home.guide.{{ $root.client_key }}.one" translate-default="{{'home.guide.one' | translate }}")
            .step-item: .step-item-content
                h4(translate="home.guide.steptwo")
                p(translate="home.guide.{{ $root.client_key }}.two" translate-default="{{'home.guide.two' | translate }}" scroll-to="#desc")
            .step-item: .step-item-content
                h4(translate="home.guide.stepthree")
                p(translate="home.guide.{{ $root.client_key }}.three" translate-default="{{'home.guide.three' | translate }}")
            .step-item: .step-item-content
                h4(translate="home.guide.stepfour")
                p(translate="home.guide.{{ $root.client_key }}.four" translate-default="{{'home.guide.four' | translate }}")
            .step-item: .step-item-content
                h4(i18n="home.guide.stepfive")
                p(translate="home.guide.{{ $root.client_key }}.five" translate-default="{{'home.guide.five' | translate }}")

    section.section.section-faq(ng-if="!$ctrl.description_html"): .wrapper
        .section-splash
        .section-title(i18n="home.faq.title")
        .faq(collapse)
            mixin faq_item(title, content, title_default, content_default, active)
                .faq-item(class=active?'active':'' collapse-item)
                    .faq-item-header(collapse-header)
                        span(translate=title i18n-vars="{ fund: $ctrl.funds[0].name }" translate-default=title_default)
                        .faq-item-chevron-down.mdi.mdi-chevron-down
                        .faq-item-chevron-up.mdi.mdi-chevron-up
                    .faq-item-content(translate=content i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }" translate-default=content_default)

            +faq_item(
                'home.faq.{{ $root.client_key }}.faq_one',
                'home.faq.{{ $root.client_key }}.one',
                '{{ "home.faq.faq_one" | translate:{ fund: $ctrl.funds[0].name } }}',
                '{{ "home.faq.one" | translate }}')


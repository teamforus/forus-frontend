top-navbar.nav-var

header.section.section-header.section-header-landing
    .header-note(translate="home.header.{{ $root.client_key }}.header_note" translate-default="{{'home.header.header_note' | translate }}")
    .wrapper
        .header-sprite 
        //- .header-content(ng-if="$ctrl.funds.length <= 1")
        .header-content
            .header-title(ng-if="$ctrl.funds.length <= 1" translate="home.header.{{ $root.client_key }}.title" translate-default="{{ 'home.header.title' | translate:{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale } }}")
            
            .header-title(ng-if="$ctrl.funds.length > 1" translate="home.header.{{ $root.client_key }}.title_multi" translate-default="{{'home.header.title_multi' | translate:{ org_name: $ctrl.funds[0].organization.name  } }}" translate-vars="{ fund: $ctrl.funds[0].name, org_name: $ctrl.funds[0].organization.name }")
            
            .header-description#desc(ng-if="!$ctrl.appConfigs.features.auto_validation")
                p(ng-if="$ctrl.funds.length <= 1" translate="home.header.{{ $root.client_key }}.subtitle" translate-default="{{'home.header.subtitle' | translate:{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale } }}" i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")
                
                p(ng-if="$ctrl.funds.length > 1" translate="home.header.{{ $root.client_key }}.subtitle_multi" translate-default="{{'home.header.subtitle_multi' | translate:{ org_name: $ctrl.funds[0].organization.name  } }}" i18n-vars="{ org_name: $ctrl.funds[0].organization.name  }")

                //- gebruik activatiecode tekst
                p(ng-if="!$root.auth_user && $ctrl.funds.length <= 1" i18n="home.header.cta" i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")
                
                p(ng-if="!$root.auth_user && $ctrl.funds.length > 1" i18n="home.header.{{ $root.client_key }}.cta" translate-default="{{ 'home.header.cta_multi' | translate }}"  i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")
                //- beheer uw voucher in me tekst
                
                p(ng-if="$root.auth_user && $ctrl.vouchers.length > 0" i18n="home.header.auth_cta" i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")

            .header-description#desc(ng-if="$ctrl.appConfigs.features.auto_validation")
                p(ng-if="$ctrl.funds.length <= 1" translate="home.header.{{ $root.client_key }}.subtitle_av" translate-default="{{'home.header.subtitle_av' | translate:{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale } }}" i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")
                
                //- gebruik activatiecode tekst
                p(ng-if="!$root.auth_user && $ctrl.funds.length <= 1" translate="home.header.{{ $root.client_key }}.cta_av" translate-default="{{ 'home.header.cta_av' | translate:{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale } }}")
                
                p(ng-if="$root.auth_user && $ctrl.vouchers.length > 0" i18n="home.header.auth_cta" i18n-vars="{ fund: $ctrl.funds[0].name, start_date: $ctrl.funds[0].start_date_locale }")
                       
            div(ng-if="!$ctrl.appConfigs.features.auto_validation")
                //- uitgelogd en activatiecode invullen
                a(ng-if="!$root.auth_user" ng-click="$ctrl.openAuthCodePopup()" i18n="home.header.button").button.button-primary 
                
                //- ingelogd geen vouchers activatie code invullen
                a(ng-if="$root.auth_user && $ctrl.vouchers.length == 0" ng-click="$ctrl.openActivateCodePopup()" i18n="home.header.button").button.button-primary
                
                //- download me button
                a(ng-if="$root.auth_user && $ctrl.vouchers.length > 0" ng-click="$ctrl.openInMeModal()" i18n="home.header.auth_button").button.button-primary
            
            div(ng-if="$ctrl.appConfigs.features.auto_validation")
                //- uitgelogd en activatiecode invullen
                a(ng-click="$ctrl.startFundRequest()" i18n="home.header.button_av").button.button-primary 
            
            br
            br
            
            a(ng-if="!$root.auth_user" scroll-to="#steps" i18n="Hoe werkt het?").header-how-it-works
            a(ng-if="$root.auth_user && $ctrl.vouchers.length > 0" translate="Meer informatie over de Me-app" href="#!/me" target="_blank").header-how-it-works
            //- usage example: 
            //- .header-title {{ 'test' | i18n:{foo:'bar'} }}
            //- .header-title(i18n="test" i18n-vars="{foo:'bar'}")


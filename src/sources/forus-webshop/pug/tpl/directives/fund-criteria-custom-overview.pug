                td € 1.545,-
                td € 475,-
            tr
                td Alleenstaande ouder
                td € 1.768,-
                td € 1.872,-
                td € 690,-
            tr
                td Getrouwd of samenwonend
                td € 1.963,-
                td € 2.080,-
                td € 765,-


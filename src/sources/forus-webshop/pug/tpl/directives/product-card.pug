.block.block-voucher-product
    .product-card
        .product-photo: img(
            src="{{ $dir.product.photo.sizes.small || './assets/img/placeholders/product-small.png' }}" 
            alt="{{ $dir.product.alternative_text }}")

        .product-details
            .product-name(ng-bind="$dir.product.name")
            .product-price: .product-price-new(ng-bind="$dir.product.price_locale")

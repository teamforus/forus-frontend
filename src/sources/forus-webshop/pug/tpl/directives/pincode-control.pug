.block.block-pincode
    input(
        ng-if="!isIe"
        type="{{ type }}" 
        autocorrect="disabled" 
        autocomplete="off" 
        autocapitalize="off" 
        spellcheck="false"
        pattern="{{ pattern }}").hidden-input

    .pincode-number(
        ng-repeat="code in chars track by $index" 
        ng-class="{'pincode-number-divider' : code=='split'}"
        ng-bind="code != 'split' ? code : ''" )
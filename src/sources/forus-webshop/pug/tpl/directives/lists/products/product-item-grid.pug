//- Product item
a.product-item(dusk="productItem")
    mixin bookmark_toggle()
        .block.block-bookmark-toggle(
            ng-if="$root.auth_user"
            ng-click="$dir.toggleBookmark($event)"
            ng-class="$dir.product.bookmarked ? 'active' : ''"
            aria-label="toevoegen aan verlanglijstje"
            aria-pressed="{{ $dir.product.bookmarked }}")
                .mdi.mdi-cards-heart(ng-if="$dir.product.bookmarked")
                .mdi.mdi-cards-heart-outline(ng-if="!$dir.product.bookmarked")

    //- Product content
    .product-content
        //- Product bookmark toggle
        .block.block-bookmark-toggle(
            ng-if="$root.auth_user"
            ng-click="$dir.toggleBookmark($event)"
            ng-class="$dir.product.bookmarked ? 'active' : ''"
            aria-label="toevoegen aan verlanglijstje"
            aria-pressed="{{ $dir.product.bookmarked }}")
                .mdi.mdi-cards-heart(ng-if="$dir.product.bookmarked")
                .mdi.mdi-cards-heart-outline(ng-if="!$dir.product.bookmarked")

        //- Product photo
        .product-photo: img(
            ng-src="{{ $dir.product.photo.sizes.small || './assets/img/placeholders/product-small.png' }}" 
            alt="{{ $dir.product.alternative_text }}")

        //- Product details
        .product-details
            //- Title
            h2.product-title(ng-bind="$dir.product.name" dusk="productName")

            //- Subtitle
            .product-subtitle(ng-bind="$dir.product.organization.name")

            //- Price
            .product-price(ng-bind="$dir.productPrice")
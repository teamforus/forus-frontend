.fund-item
    .fund-photo: img(
        ng-src="{{ $dir.media.sizes.thumbnail || $dir.media.sizes.small || './assets/img/placeholders/fund-thumbnail.png' }}"
        alt="Dit is de afbeelding van {{ $dir.fund.name }}")

    .fund-content
        .fund-details
            .fund-status-label
                .label.label-light(
                    ng-if="$dir.fund.canApply && !$dir.fund.showActivateButton"
                    translate="funds.status.is_applicable")

                .label.label-success(
                    ng-if="$dir.fund.showActivateButton"
                    translate="funds.status.activateable")

                .label.label-primary(
                    ng-if="$dir.fund.alreadyReceived"
                    translate="funds.status.active")

                .label.label-warning(
                    ng-if="$dir.fund.showPendingButton"
                    translate="funds.status.is_pending")

                .label.label-light(
                    ng-if="$dir.fund.showRequestButton"
                    translate="funds.status.is_applicable")

            h2.fund-name: a(ui-sref="fund($dir.fund)" ng-bind="$dir.fund.name")

            .fund-description(ng-if="$dir.fund.description_short")
                span(ng-if="!$dir.showMore" ng-bind="$dir.fund.description_short | str_limit:190")
                span(id="fund_description_short" ng-if="$dir.showMore" ng-bind="$dir.fund.description_short")
                br

                button.button.button-text.button-xs(
                    ng-if="!$dir.showMore && $dir.fund.description_short.length > 190" 
                    ng-click="$dir.setShowMore($event, true)"
                    aria-expanded="{{ $dir.showMore && $dir.fund.description_short.length > 190 }}"
                    aria-controls="fund_description_short") 
                    | Toon meer
                    em.mdi.mdi-chevron-down.icon-right

                button.button.button-text.button-xs(
                    ng-if="$dir.showMore && $dir.fund.description_short.length > 190" 
                    ng-click="$dir.setShowMore($event, false)"
                    aria-expanded="{{ $dir.showMore && $dir.fund.description_short.length > 190 }}"
                    aria-controls="fund_description_short") 
                    | Toon minder
                    em.mdi.mdi-chevron-up.icon-right
                
        .fund-actions(ng-if="$dir.fund.showActivateButton")
            button.button.button-primary.button-xs(
                type="button"
                ng-click="$dir.applyFund($event,$dir.fund)")
                translate(translate="funds.buttons.is_applicable")
                em.mdi.mdi-arrow-right.icon-right(aria-hidden="true")

        .fund-actions(ng-if="$dir.fund.showPendingButton")
            button.button.button-text.button-xs(
                role="button"
                ng-click="$dir.goToFundRequests($event)")
                translate(translate="funds.buttons.check_status")
                em.mdi.mdi-chevron-right.icon-right(aria-hidden="true")

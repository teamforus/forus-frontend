section.section.section-footer
    .wrapper
        .block.block-footer: .row
            .col.col-md-4(ng-if="description_contact_details_html")
                .block.block-markdown(ng-bind-html="description_contact_details_html")

            .col.col-md-4(ng-if="description_opening_times_html")
                .block.block-markdown(ng-bind-html="description_opening_times_html")

            .col(ng-class="description_opening_times_html?'col-md-3':'col-md-4'")
                .block.block-markdown
                    h3 Navigatie
                    nav.footer-nav
                        .footer-nav-item: a(ui-sref="sign-up" target="_self") Aanmelden als aanbieder
            .col.col-md-3
                .block.block-markdown
                    h3 Download Me-app
                    .block.block-app_download
                        a(href="{{ $root.appConfigs.android_link }}" target="_blank" aria-label="Download Me-app")
                            img(src="./assets/img/icon-app/icon-app-android.svg" alt="Google Play Store")
                        a(href="{{ $root.appConfigs.ios_iphone_link }}" target="_blank" aria-label="Download Me-app")
                            img(src="./assets/img/icon-app/app-store-badge.svg" alt="Apple App Store")
                    nav.footer-nav
                        .footer-nav-item: a(ui-sref="me-app" target="_blank") Meer informatie over de Me-app
            
    .block.block-copyrights: .wrapper
        .copyrights 
        .links
            .link-item(ng-repeat="pageLink in $dir.pageLinks"): a(
                ui-sref="{{ pageLink.page_type }}"
                target="{{ pageLink.external ? _blank : '_self' }}"
                translate="app_footer.links.{{ pageLink.page_type }}")
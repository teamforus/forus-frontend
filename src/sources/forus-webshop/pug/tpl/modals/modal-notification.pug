.modal.modal-notification.modal-animated(
    ng-if="$ctrl.modal.ready"
    ng-class="[$ctrl.modal.scope.modalClass, $ctrl.modalClass, $ctrl.modal.loaded ? 'modal-loaded' : '']"
    role="dialog")
    
    .modal-backdrop(
        ng-click="$ctrl.cancel()" 
        aria-label="Sluiten" 
        role="button")
    
    .modal-window
        .modal-close.mdi.mdi-close(
            ng-click="$ctrl.cancel()"
            aria-label="Sluiten"
            role="button")
                
        .modal-header    
            h2.modal-header-title(
                role="heading" 
                id="notificationDialogTitle" 
                translate="{{ $ctrl.title }}")
        
        .modal-body: .modal-section
            .modal-section-icon(ng-class="'modal-section-icon-' + $ctrl.mdiIconType")
                .mdi(
                    ng-if="$ctrl.mdiIconType && $ctrl.mdiIconClass" 
                    ng-class="'mdi-' + $ctrl.mdiIconClass")
            
            .modal-section-title(
                ng-if="$ctrl.header" 
                translate="{{ $ctrl.header }}")

            .modal-section-description(
                id="notificationDialogSubtitle" 
                ng-if="$ctrl.description && !$ctrl.descriptionIsArray" 
                translate="{{ $ctrl.description }}"
                translate-values='{email: $ctrl.email}')

            .modal-section-description(
                id="notificationDialogSubtitle" 
                ng-if="$ctrl.description && $ctrl.descriptionIsArray")

                div(
                    ng-repeat="description in $ctrl.description  track by $index" 
                    translate="{{ description }}")

        .modal-footer
            button.button.button-sm.button-light(
                ng-if="$ctrl.showCloseBtn" 
                data-close 
                ng-click="$ctrl.close()" 
                translate="{{ $ctrl.closeBtnText }}")

            button.button.button-sm.button-light(
                ng-if="$ctrl.showCancelBtn" 
                data-cancel 
                ng-click="$ctrl.cancel()" 
                translate="{{ $ctrl.cancelBtnText }}")

            button.button.button-sm.button-primary(
                ng-if="$ctrl.showConfirmBtn" 
                data-confirm 
                ng-click="$ctrl.confirm()" 
                translate="{{ $ctrl.confirmBtnText }}")
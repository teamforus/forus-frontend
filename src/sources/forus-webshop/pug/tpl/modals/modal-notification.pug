.modal.modal-notification(ng-class="$ctrl.modalClass")
    .modal-backdrop(ng-click="$ctrl.cancel()")
    .modal-content
        .modal-close.mdi.mdi-close(ng-click="$ctrl.cancel()")
        .modal-section
            .text-center
                .modal-icon(ng-if="$ctrl.icon")
                    img(ng-src="{{ $ctrl.icon }}")
                .title(translate="{{ $ctrl.title }}")
                .description(ng-if="$ctrl.description" translate="{{ $ctrl.description }}")
                .description-small(ng-if="$ctrl.notice" translate="{{ $ctrl.notice }}")
                .text-center(ng-if="$ctrl.subdescription"): .subdescription(translate="{{ $ctrl.subdescription }}")

        .modal-footer.text-center.no-border
            button.button.button-dark(ng-if="$ctrl.showCloseBtn" ng-click="$ctrl.close()" translate="{{ $ctrl.closeBtnText }}")
            button.button.button-dark(ng-if="$ctrl.showCancelBtn" ng-click="$ctrl.cancel()" translate="{{ $ctrl.cancelBtnText }}")
            button.button.button-primary(ng-if="$ctrl.showConfirmBtn" ng-click="$ctrl.confirm()" translate="{{ $ctrl.confirmBtnText }}")
.modal.modal-reimbursement-confirm.modal-animated(
    data-dusk="modalReimbursementConfirmation"
    ng-class="[$ctrl.modal.scope.modalClass, $ctrl.modalClass, $ctrl.modal.loaded ? 'modal-loaded' : '']"
    aria-describedby="pinCodeDialogSubtitle"
    aria-labelledby="pinCodeDialogTitle" 
    role="dialog")

    .modal-backdrop(ng-click="$ctrl.close()" aria-label="Sluiten")
    .modal-window
        .modal-close
            .mdi.mdi-close(
                ng-click="$ctrl.close()"
                aria-label="Sluiten"
                role="button")

        .modal-header
            h2.modal-header-title Declaratie indienen

        .modal-body: .modal-section
            .modal-warning Controleer de gegevens voordat u de declaratie verstuurd.
            reimbursement-details(reimbursement="$ctrl.reimbursement" edit="false" compact="true")

        .modal-footer
            .button.button-primary-outline.button-sm(
                ng-click="$ctrl.close()" 
                data-dusk="modalReimbursementConfirmationCancel") Cancel

            .button.button-primary.button-sm(
                ng-click="$ctrl.confirm()" 
                data-dusk="modalReimbursementConfirmationSubmit") Bevestigen

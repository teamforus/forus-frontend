.block.block-table-settings
    .table-settings-list
        .table-setting(
            ng-class="{ active: selectedCategory == 'filters', disabled: !filters.length }" ng-click="selectedCategory = 'filters'") 
            em.mdi.mdi-filter-outline
            | Filters 
        .table-setting(
            ng-class="{ active: selectedCategory == 'columns', disabled: !columns.length }" ng-click="selectedCategory = 'columns'") 
            em.mdi.mdi-filter-outline
            | Table columns  
        .table-setting(
            ng-class="{ active: selectedCategory == 'tooltips', disabled: !tooltips.length }" ng-click="selectedCategory = 'tooltips'") 
            em.mdi.mdi-information-variant-circle
            | Tooltips

    .table-settings-details-block
        .table-settings-tooltip-list(ng-if="selectedCategory == 'tooltips'")
            .table-settings-tooltip-item(ng-repeat="tooltip in tooltips" ng-class="{ active: tooltip.key == activeTooltipKey }")
                .table-settings-tooltip-item-title(ng-bind="tooltip.title") 
                .table-settings-tooltip-item-description(ng-bind="tooltip.description")

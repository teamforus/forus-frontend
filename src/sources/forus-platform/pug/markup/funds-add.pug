extends ../layout/layout-markup
block content
    .card(class=(state=='closed'?'card-outline':'')).form
        .card-header: .card-title Create fund
        .card-section.card-section-primary
            .row 
                .col.col-sm-8.col-xs-12
                    .form-group.form-group-inline
                        label.form-label Fund name
                        input(type="text" placeholder="Fund name").form-control
                    .form-group.form-group-inline
                        label.form-label Fund description
                        input(type="text" placeholder="Fund description").form-control
                    .form-group.form-group-inline
                        label.form-label Starting date
                        input(type="text" placeholder="Starting date" value="01.06.2018").form-control
                    .form-group.form-group-inline
                        label.form-label Ending date
                        input(type="text" placeholder="Ending date" value="01.06.2018").form-control
        .card-section.card-section-primary
            .row 
                .col.col-sm-8.col-xs-12
                    .form-group.form-group-inline
                        label.form-label Product categories
                        input(type="text" placeholder="KvK-nummer").form-control
                    .form-group.form-group-inline
                        label.form-label &nbsp;
                        .form-offset
                            .tag.tag-primary.tag-square 
                                | Product categories
                                a(href="#").mdi.mdi-close
                            .tag.tag-primary.tag-square 
                                | Fiets
                                a(href="#").mdi.mdi-close
        .card-section.card-section-primary
            .text-center
                button.button.button-default Cancel
                button.button.button-primary Apply
    mixin rable_row(used, total, total_per_applicant, contribution, status = 'active')
        tr
            td=used
            td=total
            td=total_per_applicant
            td=contribution
            td
                if (status == 'active')
                    .tag.tag-success Actief
                if (status == 'pending')
                    .tag.tag-default Afgelopen
            td.td-narrow
                a(href="fund-provider-subsidie-product.html").button.button-default.button-sm
                    em.mdi.mdi-eye-outline.icon-start
                    | Kijk

    mixin table_paginator()
        .card-section.card-section-narrow: .table-pagination
            .table-pagination-counter 8 results
            .table-pagination-navigation
                button(disabled).button.button-default Prev
                button.button.button-primary 1
                button.button.button-default 2
                button.button.button-default 3
                button(disabled).button.button-default Next

    .card
        .card-header: .flex-row
            - var product_name = "Taalcurcus gevorderden"
            .flex-col: .card-title Lopende en verlopen acties op #{product_name}
            .flex-col: .card-header-drown: .block.block-inline-filters
                .form(ng-if="!$ctrl.filters.show"): .form-group: input(placeholder="Search").form-control

        .card-section.card-section-padless: .table-wrapper: table.table
            tr
                th.td-narrow Gebruikt
                th Totaal aanbod
                th Limiet per aanvrager
                th Bijdrage
                th Status
                th
            
            -for (id = 1; id <= 5; ++id)
                +rable_row(2, 32, 4, '€20,-', id % 2 == 0 ? 'active' : 'pending')
        
        +table_paginator()
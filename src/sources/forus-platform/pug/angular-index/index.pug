doctype
html(ng-controller="BaseController" ng-cloak)
    include ../layout/includes/head

    body(
        ng-class="$root.layout" 
        modal-scroll-braker printable-enabler)
        
        page-loading-bar
        
        div(ng-class="$root.viewLayout == 'landing' ? 'landing-root' : ''")
            .ie-hide: div(ng-if="$root.showAppHeader"): include ../layout/includes/header

            ui-view

            .ie-hide
                div(ng-if="$root.viewLayout != 'landing'"): include ../layout/includes/footer
                div(ng-if="$root.viewLayout == 'landing'"): include ../layout/includes/footer-landing
            div(forus-chat chat-id="{{ $root.appConfigs.chat_id }}" ng-if="$root.appConfigs.chat_id")

        printables-root
        push-notifications
        
        include ../layout/includes/oldIe
        include ../layout/includes/scripts


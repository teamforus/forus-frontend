.wrapper: .block.block-choose-organization
    .organization-heading Choose organization to log in
    a(ui-sref="funds" ng-show="$root.appConfigs.panel_type == 'sponsor'").organization-item
        .organization-item-inner
            .organization-logo: img(src="./assets/img/organization-no-logo.svg")
        .organization-name Zonder organisatie

    div(ng-click="$ctrl.chooseOrganization(organization)" ng-repeat="organization in $ctrl.organizations").organization-item
        .organization-item-inner
            .organization-logo: img(ng-src="{{ organization.logo.sizes.thumbnail || './assets/img/organization-no-logo.svg' }}")
        .organization-name(ng-bind="organization.name")

    div(ui-sref="organizations-create").organization-item
        .organization-item-inner
            .organization-logo.organization-logo-mdi: .mdi.mdi-plus
        .organization-name Organisatie toe voeg

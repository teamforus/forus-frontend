.app.app-container
    menu
    section.app.app-content
        .card-heading Funds ({{ $ctrl.funds.length + $ctrl.pendingFunds.length }}) 
        div(
            ng-if="$ctrl.funds.length > 0" 
            ng-repeat="fund in $ctrl.funds" 
            fund-card-available-provider 
            fund="fund" 
            organization="$ctrl.organization")
        div(
            ng-if="$ctrl.pendingFunds.length > 0" 
            ng-repeat="fund in $ctrl.pendingFunds" 
            fund-card-provider  
            provider-fund="fund" 
            organization="$ctrl.organization")
        empty-block(
            ng-if="$ctrl.funds.length + $ctrl.pendingFunds.length == 0" 
            text="'Sorry, you have no funds available.'")
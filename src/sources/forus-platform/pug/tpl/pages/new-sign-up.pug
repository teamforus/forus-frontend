- var src_prefix = (qdt_c.platform.env_data.html5ModeEnabled?qdt_c.platform.env_data.html5Mode.basePath:'');
.app.app-container: .block.block-sign-up-steps
    section.section.section-product
        .header
            .back
                include ../../../resources/platform-general/assets/img/svg/icon-back.svg
                a(ng-click="$ctrl.goToMain()")
                    span Terug
            .heading(translate="sign_up_new.header.main_header")

        .wrapper
            mixin progress()
                .sign_up-progress
                    .pre-step1(ng-class="$ctrl.step >= 2 ? 'active' : ''")
                        .pre-step-border
                        .icon
                            include ../../../resources/platform-general/assets/img/svg/pre-step.svg

                    .sign_up-step(
                        ng-repeat="step in $ctrl.shownSteps"
                        ng-class="$ctrl.step == step ? 'sign_up-step-active' : ($ctrl.step > step ? 'sign_up-step-done' : '')")
                        
                        .sign_up-step-border
                        .sign-up-step-block(ng-bind="'Stap ' + (step - 1)")

            .block.block-sign_up: .block-wrapper
                //- General information
                div(ng-if="$ctrl.step == 1")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_1")

                        .sign_up-pane-body
                            .sign_up-pane-text(translate="sign_up_new.header.subtitle_step_1")

                            br
                            ul.sign_up-pane-list
                                li(ng-repeat="field in $ctrl.readMoreFields") {{ field }}

                        .sign_up-pane-footer(em.mdi.mdi-chevron-right.icon-right): .row
                            .col.col-lg-6.text-left: .button.button-text.button-text-padless

                            .col.col-lg-6.text-right: .button.button-text.button-text-padless(ng-click="$ctrl.next()")
                                | {{ 'sign_up_new.buttons.next' | translate }}
                                em.mdi.mdi-chevron-right.icon-right

                //- Scan QR Code
                div(ng-if="$ctrl.step == 2")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_2")

                        .sign_up-pane-body
                            .sign_up-pane-text(translate="sign_up_new.header.subtitle_step_2")

                            .sign_up-pane-heading(translate="sign_up_new.download.title")
                            .sign_up-pane-text(translate="sign_up_new.download.description")

                            .sign_up-pane-heading
                                | {{ 'sign_up_new.labels.mobile_number' | translate }}
                                phone-control(ng-model="phoneForm.values.phone" cant-delete-length="2")
                                .pincode-errors.text-center: .form-error(ng-repeat="error in phoneForm.errors.phone" ng-bind="error")

                            .button.download-link(translate="sign_up_new.download.download_link")

                            .sign_up-pane-auth
                                .sign_up-pane-auth-content
                                    .sign_up-pane-heading(translate="sign_up_new.qr_code.title")

                                    span(translate="sign_up_new.qr_code.description")

                                    .sign_up-pane-auth-apps
                                        a(href="#").sign_up-pane-auth-app-item: img(src=src_prefix + "./assets/img/icon-app-ios.svg")
                                        a(href="#").sign_up-pane-auth-app-item: img(src=src_prefix + "./assets/img/icon-app-android.svg")

                                .sign_up-pane-auth-qr_code
                                    qr-code(
                                        ng-if="$ctrl.authToken"
                                        qr-value="$ctrl.authToken"
                                        qr-type="auth_token"
                                        qr-logo=src_prefix + "./assets/img/me-logo.png")

                    .step-footer(ng-if="$ctrl.has_app")
                        a.button.button-primary(translate="sign_up_new.buttons.go_step_2" ng-click="$ctrl.skipToStep(2)")

                //- Manage organization details
                div(ng-if="$ctrl.step == 3")
                    h2.block-title

                    +progress()
                    
                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_3")

                        .sign_up-pane-body
                            .sign_up-pane-text.with-border(translate="sign_up_new.header.subtitle_step_3")

                            .sign_up-pane-text: form(ng-submit="$ctrl.next()").form: .row
                                .card-section: .pseudo-wrapper
                                    .row.group-block.with-border
                                        .col.col-md-8
                                            .form-group.col
                                                label.form-label(translate="organization_edit.labels.name")
                                                ui-control-text(
                                                    ng-model="$ctrl.organizationForm.values.name"
                                                    data-id="criterion_{{ invalidCriteria.id }}"
                                                    data-placeholder="Bedrijfsnaam")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.name" ng-bind="error")

                                            .form-group.col
                                                label.form-label
                                                    translate(translate="organization_edit.labels.bank")
                                                    tooltip(text="'Vul hier het rekeningnummer in waar u de betalingen op wilt ontvangen'")
                                                ui-control-text(
                                                    ng-model="$ctrl.organizationForm.values.iban"
                                                    data-placeholder="IBAN-nummer")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.iban" ng-bind="error")

                                            .form-group.col
                                                label.form-label
                                                    translate(translate="HERHAAL IBANâ€“NUMMER")
                                                    tooltip(text="'Vul hier het rekeningnummer in waar u de betalingen op wilt ontvangen'")
                                                ui-control-text(
                                                    ng-model="$ctrl.organizationForm.values.iban_confirmation"
                                                    data-placeholder="Example: NL123456789B01")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.iban_confirmation" ng-bind="error")

                                        .col.col-md-4
                                            .image-preview
                                                photo-selector.col(
                                                    template="photo-selector-sign_up"
                                                    type="organization_logo"
                                                    thumbnail="$ctrl.media.sizes.thumbnail"
                                                    select-photo="$ctrl.selectPhoto(file)")
                                                .info-block.info-block-primary(translate="organization_edit.labels.photo_description")

                                    .row.group-block.with-border
                                        .col
                                            .form-group.col
                                                label(translate="organization_edit.labels.mail").form-label
                                                .row
                                                    .col.col-md-8: ui-control-text(
                                                        ng-model="$ctrl.organizationForm.values.email"
                                                        placeholder="E-mailadres")

                                                    .col.col-md-4: ui-control-checkbox.make-public(
                                                        name="email_public"
                                                        data-id="email_public_input"
                                                        data-label="{{ 'organization_edit.labels.make_public' | translate }}"
                                                        ng-model="$ctrl.organizationForm.values.email_public")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.email" ng-bind="error")

                                            .form-group.col
                                                label(translate="organization_edit.labels.phone").form-label

                                                .row
                                                    .col.col-md-8: ui-control-text(
                                                        ng-model="$ctrl.organizationForm.values.phone"
                                                        placeholder="Telefoonnummer")
                                                    .col.col-md-4: ui-control-checkbox.make-public(
                                                        name="phone_public"
                                                        data-id="phone_public_input"
                                                        data-label="{{ 'organization_edit.labels.make_public' | translate }}"
                                                        ng-model="$ctrl.organizationForm.values.phone_public")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.phone" ng-bind="error")

                                            .form-group.col
                                                label(translate="organization_edit.labels.website").form-label

                                                .row
                                                    .col.col-md-8: ui-control-text(
                                                        ng-model="$ctrl.organizationForm.values.website"
                                                        placeholder="Website")
                                                    .col.col-md-4: ui-control-checkbox.make-public(
                                                        name="website_public"
                                                        data-id="website_public_input"
                                                        data-label="{{ 'organization_edit.labels.make_public' | translate }}"
                                                        ng-model="$ctrl.organizationForm.values.website_public")
                                                .form-error(ng-repeat="error in $ctrl.organizationForm.errors.website" ng-bind="error")

                                    .row.group-block.last
                                        .col
                                            .form-group.col
                                                .row
                                                    .col.col-md-8
                                                        .form-label(translate="organization_edit.labels.business_type")

                                                        .form-offset: select-control(
                                                            ng-model="$ctrl.businessType"
                                                            ng-change="$ctrl.chageBusinessType(value)"
                                                            options="$ctrl.businessTypes"
                                                            placeholder="Selecteer organisatie type...")

                                                        .form-error(
                                                            ng-repeat="error in $ctrl.organizationForm.errors.business_type_id"
                                                            ng-bind="error")

                                            .form-group.col
                                                .row
                                                    .col.col-md-8
                                                        label(translate="organization_edit.labels.kvk").form-label

                                                        ui-control-text(
                                                            ng-model="$ctrl.organizationForm.values.kvk"
                                                            data-placeholder="KvK-nummer")
                                                        .form-error(ng-repeat="error in $ctrl.organizationForm.errors.kvk" ng-bind="error")

                                            .form-group.col
                                                .row
                                                    .col.col-md-8
                                                        label(translate="organization_edit.labels.tax").form-label

                                                        ui-control-text(
                                                            ng-model="$ctrl.organizationForm.values.btw"
                                                            data-placeholder="BTW-nummer")

                                                        .form-error(ng-repeat="error in $ctrl.organizationForm.errors.btw" ng-bind="error")

                                                        .info-fields
                                                            span.info-field.red *
                                                            span.info-field(translate="organization_edit.labels.optional")
                        .sign_up-pane-footer: .row
                            .col.col-lg-6.text-left
                                .button.button-text.button-text-padless(ng-click="$ctrl.back()")
                                    | {{ 'sign_up_new.buttons.back' | translate }}
                                    em.mdi.mdi-chevron-left.icon-lefts
                            .col.col-lg-6.text-right
                                .button.button-text.button-text-padless(ng-click="$ctrl.next()")
                                    | {{ 'sign_up_new.buttons.next' | translate }}
                                    em.mdi.mdi-chevron-right.icon-right

                //- Manage offices
                div(ng-if="$ctrl.step == 4")
                    h2.block-title

                    +progress()

                    .sign_up-pane.offices
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_4")

                        .sign_up-pane-body
                            .sign_up-pane-text.header.with-border(translate="sign_up_new.header.subtitle_step_4")

                            .sign_up-pane-text(ng-if="$ctrl.offices.length"): .row
                                .card-section: .pseudo-wrapper
                                    .office(ng-repeat="office in $ctrl.offices")

                                        .preview(ng-class="!office.photo.sizes.thumbnail ? 'placeholder' : ''")
                                            img(
                                                ng-src="{{ office.photo.sizes.thumbnail ? office.photo.sizes.thumbnail : './assets/img/organization-no-logo.svg' }}")

                                        .details
                                            .address
                                                em.mdi.mdi-map-marker
                                                    span {{ office.address }}

                                            .phone
                                                em.mdi.mdi-phone
                                                    span {{ office.phone ? office.phone : 'Not specified' }}
                                            //- .schedule(ng-if="office.schedule.length")
                                            //-     em.mdi.mdi-clock-outline
                                            //-     | {{ office.schedule }}
                                        .actions
                                            .office-map-content
                                                google-map(offices="$ctrl.offices" selected-office="office.id" hide-info-window="true")
                                                //iframe(frameborder="0" width="268" height="179" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=Groningen, Netherlands&key=AIzaSyAGtyIwa3fytSaFTzIqDWdxZqdkLUzlYzM" allowfullscreen)
                                            em.edit.mdi.mdi-pencil-outline(ng-click="$ctrl.editOffice(office)")
                                                span(translate="organization_edit.buttons.edit_location")
                                            em.delete.mdi.mdi-delete(ng-click="$ctrl.deleteOffice(office)")
                                                span(translate="organization_edit.buttons.edit_location")

                            .sign_up-pane-text.last(ng-if="$ctrl.enableSaveOfficeBtn"): form(ng-submit="$ctrl.next()").form: .row
                                .card-section: .pseudo-wrapper
                                    .row.group-block.office-block
                                        .col.col-md-8
                                            .form-group.col
                                                label.form-label(translate="Address")
                                                ui-control-text(
                                                    ng-model="$ctrl.officeForm.values.address"
                                                    data-id="office_address"
                                                    data-placeholder="Address")
                                                .form-error(ng-repeat="error in $ctrl.officeForm.errors.address" ng-bind="error")

                                            .form-group.col
                                                label.form-label
                                                    translate(translate="Telefoonnummer")
                                                ui-control-text(
                                                    ng-model="$ctrl.officeForm.values.phone"
                                                    data-placeholder="Telefoonnummer")
                                                .form-error(ng-repeat="error in $ctrl.officeForm.errors.phone" ng-bind="error")

                                        .col.col-md-4.image-preview
                                            photo-selector.col(
                                                template="photo-selector-sign_up"
                                                type="office_photo"
                                                thumbnail="$ctrl.officeForm.values.photo.sizes.thumbnail"
                                                select-photo="$ctrl.selectOfficePhoto(file)")
                                            .info-block.info-block-primary(translate="organization_edit.labels.photo_description")

                                    .row.group-block.schedule-settings-block
                                        .col.opening
                                            .sign_up-pane-text(translate="organization_edit.labels.schedule")

                                            .form-group.col
                                                .row
                                                    ui-control-checkbox.sync(
                                                        name="office_same_hours"
                                                        data-id="office_same_hours"
                                                        data-label="{{ 'organization_edit.labels.weekdays_same_hours' | translate }}"
                                                        ng-change="$ctrl.setSameHours(true)"
                                                        ng-model="$ctrl.officeForm.values.same_hours")
                                                .form-error(ng-repeat="error in $ctrl.officeForm.errors.office_same_hours" ng-bind="error")

                                            .form-group.col
                                                .row
                                                    ui-control-checkbox.sync(
                                                        name="weekend_same_hours"
                                                        data-id="weekend_same_hours"
                                                        data-label="{{ 'organization_edit.labels.weekends_same_hours' | translate }}"
                                                        ng-change="$ctrl.setSameHours(false)"
                                                        ng-model="$ctrl.officeForm.values.weekend_same_hours")
                                                .form-error(ng-repeat="error in $ctrl.officeForm.errors.weekend_same_hours" ng-bind="error")

                                    .row.group-block.schedule-block
                                            .col.col-md-8
                                                table.schedule
                                                    tr
                                                        th(translate="organization_edit.labels.day")
                                                        th(translate="organization_edit.labels.open")
                                                        th(translate="organization_edit.labels.start")
                                                        th(translate="organization_edit.labels.end")
                                                        th.breaks(translate="organization_edit.labels.break")

                                                    tr(ng-repeat="(weekDayKey, weekDay) in $ctrl.weekDays track by $index")
                                                        td(ng-class="$index >= 5 ? 'weekend' : ''") {{ weekDay }}

                                                        td
                                                            ui-control-checkbox(
                                                                name="is_opened{{$index}}"
                                                                data-id="schedule_is_opened{{$index}}"
                                                                ng-change="$ctrl.toggleOpened($index)"
                                                                ng-model="$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened")
                                                        td
                                                            ui-control-text.time.start(
                                                                ng-model="$ctrl.officeForm.values.schedule[weekDayKey].start_time"
                                                                ng-if="$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened"
                                                                ng-change="$ctrl.syncHours($index, 'start_time')"
                                                                data-placeholder="from")
                                                            span(
                                                                ng-if="!$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened"
                                                                translate="organization_edit.labels.closed")
                                                        td
                                                            ui-control-text.time.end(
                                                                ng-model="$ctrl.officeForm.values.schedule[weekDayKey].end_time"
                                                                ng-if="$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened"
                                                                ng-change="$ctrl.syncHours($index, 'end_time')"
                                                                data-placeholder="till")

                                                        td.breaks
                                                            ui-control-text.time.breaks.start(
                                                                ng-model="$ctrl.officeForm.values.schedule[weekDayKey].break_start_time"
                                                                ng-if="$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened"
                                                                ng-change="$ctrl.syncHours($index, 'start_time')"
                                                                data-placeholder="from")

                                                            ui-control-text.time.breaks.end(
                                                                ng-model="$ctrl.officeForm.values.schedule[weekDayKey].break_end_time"
                                                                ng-if="$ctrl.officeForm.values.scheduleDetails[weekDayKey].is_opened"
                                                                ng-change="$ctrl.syncHours($index, 'end_time')"
                                                                data-placeholder="till")

                            .location-btns.col: .row
                                .col.col-lg-4
                                    button.button-text.button-text-padless.save(
                                        ng-click="$ctrl.saveOffice()"
                                        ng-disabled="!$ctrl.enableSaveOfficeBtn")
                                        | {{ 'organization_edit.buttons.save_location' | translate }}
                                .col.col-lg-8
                                    button.button-text.button-text-padless.location(
                                        ng-click="$ctrl.addOffice()"
                                        ng-show="$ctrl.showAddOfficeBtn")
                                        | {{ 'organization_edit.buttons.add_location' | translate }}
                                .col.col-lg-8
                                    button.button-text.button-text-padless.cancel(
                                        ng-click="$ctrl.cancelOfficeEdit()"
                                        ng-show="$ctrl.showCancelBtn")
                                        | {{ 'organization_edit.buttons.cancel' | translate }}

                        .sign_up-pane-footer: .row
                            .col.col-lg-6.text-left: .button.button-text.button-text-padless

                            .col.col-lg-6.text-right
                                .button.button-text.button-text-padless(ng-click="$ctrl.next()")
                                    | {{ 'sign_up_new.buttons.next' | translate }}
                                    em.mdi.mdi-chevron-right.icon-right

                //- Manage employees
                div(ng-if="$ctrl.step == 5")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_5")

                        .sign_up-pane-body
                            .sign_up-pane-text.header.with-border(translate="sign_up_new.header.subtitle_step_5")

                            .sign_up-pane-text: form(ng-submit="$ctrl.next()").form: .row
                                .card-section: .pseudo-wrapper
                                    .employee-info(ng-repeat="employee in $ctrl.employees")
                                        .details
                                            .email {{ employee.email }}

                                        .actions
                                            //- em.mdi.mdi-pencil-outline(ng-click="$ctrl.editEmployee(employee)")
                                            em.mdi.mdi-delete(ng-click="$ctrl.deleteEmployee(employee)")

                                    .row.group-block.employee
                                        .col.col-md-7
                                            .form-group.col
                                                label.form-label(translate="E-MAILadres")
                                                ui-control-text(
                                                    data-id="employee"
                                                    ng-model="$ctrl.employeeForm.values.email"
                                                    data-placeholder="ex. info@info.io").large
                                                .form-error(ng-repeat="error in $ctrl.employeeForm.errors.name" ng-bind="error")

                                        .col.col-md-5
                                            .form-group.col
                                            label.form-label &nbsp;
                                            button.button.button-primary.button-fill(
                                                type="button"
                                                ng-click="$ctrl.saveEmployee()"
                                                translate="organization_edit.buttons.add_employee")

                        .sign_up-pane-footer: .row
                            .col.col-lg-6.text-left
                                .button.button-text.button-text-padless(ng-click="$ctrl.back()")
                                    | {{ 'sign_up_new.buttons.back' | translate }}
                                    em.mdi.mdi-chevron-left.icon-lefts

                            .col.col-lg-6.text-right
                                .button.button-text.button-text-padless(ng-click="$ctrl.next()")
                                    | {{ 'sign_up_new.buttons.next' | translate }}
                                    em.mdi.mdi-chevron-right.icon-right

                //- Step 6: Funds available
                .step-item.fund-apply(ng-if="$ctrl.step == 6")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_6")

                        .sign_up-pane-body

                            .sign_up-pane-text.header.with-border(translate="sign_up_new.header.subtitle_step_6")

                            .row.form.filters(ng-if="$ctrl.showFilters")   
                                .col.col-lg-6
                                    .form-label(translate="sign_up_new.filters.labels.organizations")
                                    select(
                                        ng-options="fundOrganization.id_str as fundOrganization.name for fundOrganization in $ctrl.fundOrganizations" 
                                        ng-model="$ctrl.fundOrganization"
                                        ng-change="$ctrl.filterFunds()").form-control 
        
                                .col.col-lg-6
                                    .form-label(translate="sign_up_new.filters.labels.tags")
                                    select(
                                        ng-options="fundLabel.key as fundLabel.name for fundLabel in $ctrl.fundLabels" 
                                        ng-model="$ctrl.fundLabel"
                                        ng-change="$ctrl.filterFunds()").form-control

                            .card(
                                ng-if="$ctrl.fundsAvailable.length > 0"
                                ng-repeat="fund in $ctrl.fundsAvailable")
                                    .card-section.card-section-primary
                                        div(
                                            template="provider-signup-fund-card"
                                            fund-card-provider-can-join
                                            fund="fund"
                                            organization="$ctrl.organization"
                                            hide-modal="true")

                                        block-empty(
                                            ng-if="$ctrl.funds.length == 0"
                                            text="Er zijn momenteel geen actieve fondsen.")

                            block-empty(
                                ng-if="$ctrl.fundsAvailable.length == 0" 
                                text="Er zijn momenteel geen actieve fondsen.")                

                        .sign_up-pane-footer: .row
                            .col.col-lg-6.text-left
                                .button.button-text.button-text-padless(ng-click="$ctrl.back()")
                                    | {{ 'sign_up_new.buttons.back' | translate }}
                                    em.mdi.mdi-chevron-left.icon-lefts
                            .col.col-lg-6.text-right
                                .button.button-text.button-text-padless(ng-click="$ctrl.next()")
                                    | {{ 'sign_up_new.buttons.next' | translate }}
                                    em.mdi.mdi-chevron-right.icon-right

                //- Apply fund success screen
                .finish-screen(ng-if="$ctrl.step == 7")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_7")

                        .sign_up-pane-body: form(ng-submit="$ctrl.submitCriteria(invalidCriteria)").form.row
                            .form-group.col.col-lg-12
                                .block-icon: img(src=src_prefix + "./assets/img/icon-sign_up-success.svg")
                                .sign_up-pane-heading.text-center(translate="sign_up_new.header.top_title_step_7")
                                p.sign_up-pane-text.text-center(translate="sign_up_new.header.subtitle_step_7")

                                .text-center: .button.button-finish(
                                    ng-click="$ctrl.next()"
                                    translate="sign_up_new.buttons.go_test_screen")
                            .form-group.col.col-lg-12: br

                //- Scan QR Code (test)
                div(ng-if="$ctrl.step == 8")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_8")

                        .sign_up-pane-body
                            .sign_up-pane-text.header(translate="sign_up_new.header.subtitle_step_8")

                            .sign_up-pane-auth.test-qr
                                .sign_up-pane-auth-qr_code
                                    qr-code(
                                        ng-if="$ctrl.demoToken"
                                        qr-value="$ctrl.demoToken"
                                        qr-type="demo_voucher"
                                        qr-logo=src_prefix + "./assets/img/me-logo.png")

                    .step-footer(ng-if="$ctrl.has_app")
                        a(translate="sign_up_new.buttons.go_step_2" ng-click="$ctrl.skipToStep(2)").button.button-primary

                //- Done
                .finish-screen(ng-if="$ctrl.step == 9")
                    h2.block-title

                    +progress()

                    .sign_up-pane
                        .sign_up-pane-header(translate="sign_up_new.header.title_step_9")

                        .sign_up-pane-body: form(ng-submit="$ctrl.submitCriteria(invalidCriteria)").form.row
                            .form-group.col.col-lg-12
                                .block-icon: img(src=src_prefix + "./assets/img/icon-smarthone-sign_up.svg")
                                .sign_up-pane-heading.text-center(translate="sign_up_new.header.top_title_step_9")
                                p.sign_up-pane-text.text-center(translate="sign_up_new.header.subtitle_step_9")

                                .text-center: .button.button-finish(
                                    ng-click="$ctrl.finish()"
                                    translate="sign_up_new.buttons.go_to_dashboard")
                            .form-group.col.col-lg-12: br

                //- Error
                div(ng-if="$ctrl.state == 'error'")
                    h2.block-title Zomerzwemregeling aanvraag

                    .sign_up-pane
                        .sign_up-pane-header Error during sign up request submission.
                        .sign_up-pane-body: .row
                            .form-group.col.col-lg-12
                                .block-icon: .mdi.mdi-close
                                p.sign_up-pane-text.text-center
                                    | Reason:
                                    span(ng-bind="$ctrl.errorReason")

                                .text-center: .button.button-default(ng-click="$ctrl.finish()") Terug naar het dashboard
                            .form-group.col.col-lg-12: br

                //- Mobile device warning
                .hidden-lg.hidden-md.open-pc-section: .section-inner
                    .img-block: img(src="./assets/img/sign-up/user-mobile.png")
                    .title(translate="sign_up_new.open_pc.title")
                    .open-pc-description(translate="sign_up_new.open_pc.description")
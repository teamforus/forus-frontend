.app.app-container
    menu
    section.app.app-content
        .card: form(ng-submit="$ctrl.form.submit()").form
            .card-header: .card-title {{ $ctrl.validator ? 'Medewerker bewerken' : 'Medewerker toevoegen' }}
            .card-section.card-section-primary
                .row 
                    .col.col-lg-9.col-md-12
                        // .form-group.form-group-inline
                            label.form-label Identity address
                            input(ng-model="$ctrl.form.values.identity_address" type="text" placeholder="Identity address").form-control
                            .form-error(ng-repeat="error in $ctrl.form.errors.identity_address" ng-bind="error")

                        .form-group.form-group-inline
                            label.form-label {{ "validators_edit.labels.mail" | translate }}
                            input(ng-model="$ctrl.form.values.email" type="text" placeholder="").form-control
                            .form-error(ng-repeat="error in $ctrl.form.errors.email" ng-bind="error")

            .card-section.card-section-primary
                .text-center
                    button(type="button" ng-click="$ctrl.cancel()").button.button-default {{ "validators_edit.buttons.cancel" | translate }}
                    button(type="submit").button.button-primary {{ "validators_edit.buttons.confirm" | translate }}
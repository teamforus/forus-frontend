.app.app-container
    menu
    section.app.app-content
        .card
            .card-header: .flex
                .flex.flex-grow: .card-title
                    span(translate="external_validators.header.title")
                    | &nbsp;
                    span(ng-bind="$ctrl.validatorOrganizations.meta.total").span-count

                .flex: .block.block-inline-filters
                    .button.button-text(ng-if="$ctrl.filters.show" ng-click="$ctrl.filters.reset()")
                        em.mdi.mdi-close.icon-start
                        span(i18n="Wis filters")

                    .form(ng-if="!$ctrl.filters.show")
                        .form-group: input(ng-model="$ctrl.filters.values.q" placeholder="Zoeken").form-control

                    .inline-filters-dropdown(click-outside="$ctrl.hideFilters()")
                        .inline-filters-dropdown-content(ng-show="$ctrl.filters.show")
                            .arrow-box.bg-dim: .arrow
                            .form
                                .form-group
                                    form-label-toggle(label="{{ 'external_validators.filters.labels.search' | translate }}" is-active)
                                    input(
                                        ng-model="$ctrl.filters.values.q" 
                                        placeholder="{{ 'external_validators.filters.labels.search' | translate }}").form-control

                                .form-group(ng-click="$event.stopPropagation()")
                                    form-label-toggle(label="{{ 'external_validators.filters.labels.email' | translate }}")
                                    input(
                                        ng-model="$ctrl.filters.values.email" 
                                        placeholder="{{ 'external_validators.filters.labels.email' | translate }}").form-control

                                .form-group(ng-click="$event.stopPropagation()")
                                    form-label-toggle(label="{{ 'external_validators.filters.labels.phone' | translate }}")
                                    input(
                                        ng-model="$ctrl.filters.values.phone" 
                                        placeholder="{{ 'external_validators.filters.labels.phone' | translate }}").form-control

                                .form-group(ng-click="$event.stopPropagation()")
                                    form-label-toggle(label="{{ 'external_validators.filters.labels.website' | translate }}")
                                    input(
                                        ng-model="$ctrl.filters.values.website" 
                                        placeholder="{{ 'external_validators.filters.labels.website' | translate }}").form-control

                        .button.button-default.button-icon(ng-click="$ctrl.filters.show = !$ctrl.filters.show"): em.mdi.mdi-filter-outline
        
            .card-section(ng-if="$ctrl.validatorOrganizations.data.length > 0"): .card-block.card-block-table: .table-wrapper: table.table
                tr
                    th(th-sortable filters="$ctrl.filters.values" label="external_validators.labels.organization_name" value="name")
                    th(th-sortable filters="$ctrl.filters.values" label="external_validators.labels.email" value="email")
                    th(th-sortable filters="$ctrl.filters.values" label="external_validators.labels.phone" value="phone")
                    th(th-sortable filters="$ctrl.filters.values" label="external_validators.labels.website" value="website")
                    th(translate="external_validators.labels.actions").text-right

                tr(ng-repeat="validatorOrganization in $ctrl.validatorOrganizations.data")
                    td: .flex.flex-align-items-center
                        img.td-media.td-media-sm(
                            ng-src="{{ validatorOrganization.logo.sizes.thumbnail || './assets/img/placeholders/organization-thumbnail.png' }}")
                        | &nbsp;
                        .text-primary.text-strong(
                            ng-bind="validatorOrganization.name | str_limit:40")
                    td: span(ng-if="validatorOrganization.email_public" ng-bind="validatorOrganization.email")
                    td: span(ng-if="validatorOrganization.phone_public" ng-bind="validatorOrganization.phone")
                    td: span(ng-if="validatorOrganization.website_public" ng-bind="validatorOrganization.website")
                    
                    td.text-right
                        .button.button-primary(
                            ng-if="!validatorOrganization.approved"
                            ng-click="$ctrl.addExternalValidator(validatorOrganization)")
                            em.mdi.mdi-check-circle.icon-start
                            translate(translate="external_validators.buttons.add")
                        
                        .button.button-default(
                            ng-if="validatorOrganization.approved"
                            ng-click="$ctrl.removeExternalValidator(validatorOrganization)")
                            em.mdi.mdi-close.icon-start
                            translate(translate="external_validators.buttons.delete")

            //- Pagination
            .card-section(ng-if="$ctrl.validatorOrganizations.meta" ng-show="$ctrl.validatorOrganizations.meta.last_page > 0")
                paginator(
                    meta="$ctrl.validatorOrganizations.meta" 
                    filters="$ctrl.filters.values" 
                    count-buttons="5" 
                    on-page-change="$ctrl.onPageChange(query)")

            //- Not found
            .card-section(ng-if="$ctrl.validatorOrganizations.meta.total == 0"): .block.block-empty.text-center
                .empty-title Geen beoordelaars beschikbaar.
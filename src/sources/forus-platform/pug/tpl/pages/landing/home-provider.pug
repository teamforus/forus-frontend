                translate-default="{{'home_provider.header.default.title' | translate }}")
            .header-description(
                translate="home_provider.header.{{ $root.appConfigs.client_key }}.subtitle"
                translate-default="{{'home_provider.header.default.subtitle' | translate }}")
section.section.section-flow: .wrapper
    .section-title(
    translate="home_provider.guide.{{ $root.appConfigs.client_key }}.title"
    translate-default="{{'home_provider.guide.default.title' | translate }}")
    .section-description(
    translate="home_provider.guide.{{ $root.appConfigs.client_key }}.description"
    translate-default="{{'home_provider.guide.default.description' | translate }}")
    //- img(src="./assets/img/landing/forus-flow-provider.png").section-scheme
    .block.block-show-more: a(
    href="../provider/#!/sign-up"
    translate="home_provider.guide.{{ $root.appConfigs.client_key }}.button"
    translate-default="{{'home_provider.guide.default.button' | translate }}").button.button-primary

section.section.section-faq: .wrapper
    .section-title {{ "home_provider.faq.title" | i18n }}
    .faq(collapse)
        mixin faq_item(title, content, title_default, content_default, active)
            .faq-item(class=active?'active':'' collapse-item)
                .faq-item-header(collapse-header)
                    span(translate=title i18n-vars="{ fund: $ctrl.funds[0].name }" translate-default=title_default)
                    .faq-item-chevron-down.mdi.mdi-chevron-down
                    .faq-item-chevron-up.mdi.mdi-chevron-up
                .faq-item-content(collapse-conten, translate=content translate-default=content_default)

        +faq_item(
            'home_provider.faq.{{ $root.client_key }}.faq_one',
            'home_provider.faq.{{ $root.client_key }}.one',
            '{{ "home_provider.faq.faq_one" | translate }}',
            '{{ "home_provider.faq.one" | translate }}')

        +faq_item(
            'home_provider.faq.{{ $root.client_key }}.faq_two',
            'home_provider.faq.{{ $root.client_key }}.two',
            '{{ "home_provider.faq.faq_two" | translate }}',
            '{{ "home_provider.faq.two" | translate }}')

        +faq_item(
            'home_provider.faq.{{ $root.client_key }}.faq_three',
            'home_provider.faq.{{ $root.client_key }}.three',
            '{{ "home_provider.faq.faq_three" | translate }}',
            '{{ "home_provider.faq.three" | translate }}')


            #panel4-video.tab-pane.fade
                .wrapper_tab_video
                    video(id="player_tab_4" )
                        source(src="assets/video/Validator.mov" type="video/mp4")
                a.btn_link(href="#" )
        .wrapper_roles
            ul.nav.nav-tabs.roles
                li.role
                    a(data-toggle="tab" href="#panel1-video" id="#panel1")
                        span.role_content
                            span.title Aanvrager
                            span.text die in aanmerking komt voor een uitkering
                            span.btn_link(href="#" id="#panel1")
                                span Bekijk de film
                                span.play_btn
                                    include ../../../../resources/platform-general/assets/img/svg/play-arrow.svg

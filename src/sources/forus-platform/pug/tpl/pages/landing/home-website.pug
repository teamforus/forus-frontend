                li.role
                    a(data-toggle="tab" href="#panel2-video" id="#panel2")
                        span.role_content
                            span.title Aanbieder
                            span.text waar het geld kan worden uitgegeven
                            span.btn_link(href="#" id="#panel2")
                                span Bekijk de film
                                span.play_btn
                                    include ../../../../resources/platform-general/assets/img/svg/play-arrow.svg
                                    include ../../../../resources/platform-general/assets/img/svg/pause.svg
                li.role
                    a(data-toggle="tab" href="#panel3-video" id="#panel3")
                        span.role_content
                            span.title Sponsor
                            span.text die het geld heeft en/of beheert
                            span.btn_link(href="#" id="#panel3")
                                span Bekijk de film
                                span.play_btn
                                    include ../../../../resources/platform-general/assets/img/svg/play-arrow.svg
                                    include ../../../../resources/platform-general/assets/img/svg/pause.svg
                li.role
                    a(data-toggle="tab" href="#panel4-video" id="#panel4")

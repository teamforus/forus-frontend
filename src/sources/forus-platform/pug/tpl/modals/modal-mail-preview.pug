.modal.modal-animated(
    ng-if="$ctrl.modal.ready"
    ng-class="[$ctrl.modal.scope.modalClass, $ctrl.modalClass, $ctrl.modal.loaded ? '' : 'modal-loading']")
    .modal-backdrop(ng-click="$ctrl.close()")

    .modal-window
        .modal-header
            | Titel: #[span(ng-bind="$ctrl.title")]
            .modal-close.mdi.mdi-close(ng-click="$ctrl.close()" role="button")

        .modal-body(ng-class="'text-' + $ctrl.text_align")
            //- Preview
            .block.block-mail_preview: .mail_preview-wrapper: .mail_preview-inner: .mail_preview-body
                .block.block-markdown.block-markdown-center(ng-bind-html="$ctrl.content_html")
                .mail_preview-footer
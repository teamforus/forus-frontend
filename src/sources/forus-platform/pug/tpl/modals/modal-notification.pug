.modal.modal-notification(ng-class="$ctrl.modalClass")
    .modal-backdrop(ng-click="$ctrl.cancel()")
    .modal-window
        .modal-close(ng-click="$ctrl.close()")
            include ../../../resources/platform-general/assets/img/svg/close.svg
        
        .modal-body.form
            .modal-section
                .text-center
                    .modal-icon-rounded(ng-if="$ctrl.icon"): img(ng-src="{{ $ctrl.icon }}")
                    
                    p.title(translate="{{ $ctrl.title }}")
                    p.description(ng-if="$ctrl.description && !$ctrl.descriptionIsArray" translate="{{ $ctrl.description }}")
                    p.description(
                        ng-if="$ctrl.description && $ctrl.descriptionIsArray" 
                        ng-repeat="description in $ctrl.description" 
                        translate="{{ description }}")

        .modal-footer.text-center
            button.button.button-default(ng-if="$ctrl.showCloseBtn" ng-click="$ctrl.close()" translate="{{ $ctrl.closeBtnText }}")
            button.button.button-default(ng-if="$ctrl.showCancelBtn" ng-click="$ctrl.cancel()" translate="{{ $ctrl.cancelBtnText }}")
            button.button.button-primary(ng-if="$ctrl.showConfirmBtn" ng-click="$ctrl.confirm()" translate="{{ $ctrl.confirmBtnText }}")
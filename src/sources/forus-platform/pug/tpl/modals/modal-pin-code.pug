.modal.modal-auth
    .modal-backdrop(ng-click="$ctrl.close()")
    .modal-content: .modal-section
        .modal-close.mdi.mdi-close(ng-click="$ctrl.close()")
        .app-instruction
            .step-item
                img(src="./assets/img/screen1.png")
                .app-title(translate="open_in_me.app_instruction.step_1")
                img.line-item(src="./assets/img/line1.png")
            .step-item
                img(src="./assets/img/screen2.png")
                .app-title(translate="open_in_me.app_instruction.step_2")

            .divider-img: img(src="./assets/img/Base7.png")

        .modal-title {{ "open_in_me.app_header.title" | translate }}
        .modal-subtitle {{ "open_in_me.app_header.subtitle" | translate }}

        form.form.f-w.with-instructions(ng-submit="$ctrl.authorizePincodeForm.submit()")
            .form-group
                pincode-control(ng-if="$ctrl.authorizePincodeForm" ng-model="$ctrl.authorizePincodeForm.values.auth_code")
                .text-center.form-error(ng-repeat="error in $ctrl.authorizePincodeForm.errors.auth_code track by $index" ng-bind="error")
            .form-group.text-center
                button(type="submit").button.button-primary {{ "open_in_me.authorize.submit" | translate }}
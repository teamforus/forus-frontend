.modal.modal-pdf-preview.modal-animated(ng-class="[$ctrl.modal.scope.modalClass, $ctrl.modalClass, $ctrl.modal.loaded ? '' : 'modal-loading']")
    .modal-backdrop(ng-click="$ctrl.close()")
    .modal-window
        a(ng-click="$ctrl.close()" role="button").mdi.mdi-close.modal-close
        .modal-header(translate="modal_pdf_preview.header.title")
        .modal-body
            .modal-section: pdf-preview(raw-pdf-file="$ctrl.rawPdfFile")
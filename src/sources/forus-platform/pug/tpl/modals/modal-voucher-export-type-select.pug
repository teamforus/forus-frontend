.modal.modal-voucher-export-type
    .modal-backdrop(ng-click="$ctrl.close()")
    //- Select type
    .modal-window: form.form
        .modal-close.mdi.mdi-close(ng-click="$ctrl.close()")
        .modal-header(i18n="modals.modal_voucher_export.title")

        .modal-body: .modal-section
            .voucher-export-type
                .voucher-export-type-row
                    .voucher-export-type-item(ng-click="$ctrl.form.values.exportType = 'png'" ng-class="{active: $ctrl.form.values.exportType == 'png'}")
                        .voucher-export-type-item-check: em.mdi.mdi-check-bold
                        .voucher-export-type-item-icon: em.mdi.mdi-file-image
                        | {{ 'modals.modal_voucher_export.modal_section.export_type_png' | i18n }}
                    
                    .voucher-export-type-item(ng-click="$ctrl.form.values.exportType = 'pdf'" ng-class="{active: $ctrl.form.values.exportType == 'pdf'}")
                        .voucher-export-type-item-check: em.mdi.mdi-check-bold
                        .voucher-export-type-item-icon: em.mdi.mdi-file-pdf
                        | {{ 'modals.modal_voucher_export.modal_section.export_type_pdf' | i18n }}

        .modal-footer.text-center
            button.button.button-dark(type="button" ng-click="$ctrl.close()" i18n="modals.modal_voucher_create.buttons.cancel")
            button.button.button-primary(type="button" ng-if="$ctrl.form.values.exportType" ng-click="$ctrl.form.submit()" i18n="modals.modal_voucher_export.buttons.submit")

aside.app.app-sidebar
    .sidebar-nav
        mixin nav_item_icon(icon)
            .sidebar-nav-item-icon 
                img(src="./assets/img/menu/icon-" + icon + ".svg")
                img(src="./assets/img/menu/icon-" + icon + "-hover.svg").hover
                img(src="./assets/img/menu/icon-" + icon + "-active.svg").active

        mixin nav_item(name, icon, sref, srefParams, ngif)
            a(
                ui-sref=(sref + (srefParams ? ("(" + srefParams + ")") : '')) 
                ui-sref-active="active"
                ng-if=ngif
                ).sidebar-nav-item
                .sidebar-nav-item-arrow: .mdi.mdi-menu-right
                +nav_item_icon(icon)
                | #{name} 
        
        +nav_item("Funds", "clock", 'funds', false)
        +nav_item("My Funds", "my_funds", 'organization-funds', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Add fund", "plus", 'funds-create', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Transactions", "transactions", 'transactions', false, '$root.activeOrganization')
        +nav_item("Financial Dashboard", "financial_dashboard", 'financial-dashboard', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Validators", "list", 'validators', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Providers", "people", 'organization-providers', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
.block.block-markdownable
    .markdown-toolbar.toolbar-commenting
        .toolbar-group
            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="**" data-end="**" data-mark-type="text" data-placement="top" title="Maak dikgedrukt")
                em.mdi.mdi-format-bold

            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="_" data-end="_" data-mark-type="header" data-placement="top" title="Maak schuingedrukt")
                em.mdi.mdi-format-italic

        .toolbar-group
            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="- " data-end="" data-mark-type="list" data-placement="top" title="Voeg lijst toe")
                em.mdi.mdi-format-list-bulleted

            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="1. " data-end="" data-mark-type="list" data-placement="top" title="Voeg nummerlijst toe")
                em.mdi.mdi-format-list-numbered

        .toolbar-group(ng-show="extendedOptions")
            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="(" data-end=")" data-mark-type="custom-link" data-placement="top" title="Voeg link toe")
                em.mdi.mdi-link

            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="(" data-end=")" data-mark-type="image-link" data-placement="top" title="Voeg afbeelding toe")
                em.mdi.mdi-image

            button.toolbar-item.tooltipped(type="button" tabindex="-1" data-start="(" data-end=")" data-mark-type="youtube" data-placement="top" title="Voeg youtube video toe")
                em.mdi.mdi-youtube

    .form-group
        textarea.form-control.markdown-textarea(ng-model="ngModel")

    .markdow-hint **dikgedrukt** _schuingedrukt_

.block.block-navbar.wrapper(menu_scroll_toggle): .navbar-inner
    a(href="{{ $root.appConfigs.frontends.url_webshop }}" target="_self").navbar-logo
        img(ng-src="{{ './assets/img/landing/logo-normal' + cfg.logoExtension }}")
        img(ng-src="{{ './assets/img/landing/logo-normal' + cfg.logoExtension }}").hover
    nav.navbar-list(ng-class="mobileMenu?'navbar-list-show':''")
        .navbar-list-auth.visible-sm.visible-xs
            //- Auth menu
            nav.navbar-item-wrapper: .navbar-item(ui-sref="organizations") Open dashboard
            nav.navbar-item-wrapper: .navbar-item(ng-click="$root.openPinCodePopup()" translate="topnavbar.buttons.authorize")
            nav.navbar-item-wrapper: .navbar-item(ng-click="$root.signOut()" translate="topnavbar.buttons.logout")

        nav.navbar-item-wrapper: a(
            href="{{ $root.appConfigs.frontends.url_sponsor }}"
            ng-class="$root.appConfigs.panel_type=='sponsor'?'active':''").navbar-item GEMEENTE
        nav.navbar-item-wrapper: a(
            href="{{ $root.appConfigs.frontends.url_provider }}"
            ng-class="$root.appConfigs.panel_type=='provider'?'active':''").navbar-item AANBIEDER
        //- a(
            href="{{ $root.appConfigs.frontends.url_validator }}"
            ng-class="$root.appConfigs.panel_type=='validator'?'active':''").navbar-item VALIDATOR
        nav.navbar-item-wrapper: a(href="{{ $root.appConfigs.frontends.url_app }}" target="_blank").navbar-item ME
        nav.navbar-item-wrapper: a(href="{{ $root.appConfigs.frontends.url_webshop }}").navbar-item WEBSHOP
    .block.block-auth
        .auth-in(ng-if="$root.auth_user")
            .auth-user
                .auth-user-email(ng-bind="$root.auth_user.email || ($root.auth_user.address | str_limit:32)")
                .auth-user-type(translate="topnavbar.items.identity")
                .auth-user-avatar
                    img(src="./assets/img/landing/identity-avatar.svg")
                    nav.auth-user-menu.visible-md.visible-lg
                        .triangle
                        .inner
                            .auth-user-menu-item(ui-sref="organizations")
                                em.mdi.mdi-account
                                | Open dashboard
                            .auth-user-menu-item(ng-click="$root.openPinCodePopup()")
                                em.mdi.mdi-cellphone
                                span(translate="topnavbar.buttons.authorize")

                            .auth-user-menu-separator.visible-sm.visible-xs
                            div(ng-click="$root.signOut()").auth-user-menu-item
                                img(src="./assets/img/landing/icon-menu/icon-menu-sign-out.svg")
                                span(translate="topnavbar.buttons.logout")
        
        .auth-out(ng-if="$root.auth_user === false")
            .button.button-default(ng-click="openAuthPopup()" id="login")
                em.mdi.mdi-account.icon-start
                //- img(src="./assets/img/icon-btn/icon-btn-user.svg")
                | Login

    .navbar-mobile-menu.visible-sm.visible-xs
        em.mdi(ng-class="mobileMenu?'mdi-close':'mdi-menu'" ng-click="mobileMenu = !mobileMenu")

.block.block-push-notifications: .inner
    .notification(ng-repeat="notification in notifications" ng-class="{shown: notification.shown}").notification-success
        .notification-close.mdi.mdi-close(ng-click="deleteNotification(notification)")
        .notification-icon(ng-class="'mdi mdi-' + notification.icon")
        .notification-details
            strong(ng-if="notification.title" ng-bind="notification.title")
            span(ng-if="notification.message" ng-bind="notification.message")
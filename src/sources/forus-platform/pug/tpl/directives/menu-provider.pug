aside.app.app-sidebar
    .sidebar-nav
        mixin nav_item_icon(icon)
            .sidebar-nav-item-icon 
                img(src="./assets/img/menu/icon-" + icon + ".svg")
                img(src="./assets/img/menu/icon-" + icon + "-hover.svg").hover
                img(src="./assets/img/menu/icon-" + icon + "-active.svg").active

        mixin nav_item(name, icon, sref, srefParams, ngif)
            a(
                ui-sref=(sref + (srefParams ? ("(" + srefParams + ")") : '')) 
                ui-sref-active="active"
                ng-if=ngif
                ).sidebar-nav-item
                .sidebar-nav-item-arrow: .mdi.mdi-menu-right
                +nav_item_icon(icon)
                | #{name} 
        
        +nav_item("Offices", "offices", 'offices', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Transactions", "transactions", 'transactions', false, '$root.activeOrganization')
        +nav_item("Active Funds", "funds", 'provider-funds', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Available funds", "my_funds", 'provider-funds-available', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        +nav_item("Products", "products", 'products', '{organization_id: $root.activeOrganization}', '$root.activeOrganization')
        | &nbsp;
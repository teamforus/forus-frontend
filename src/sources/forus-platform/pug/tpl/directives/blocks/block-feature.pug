.card: .card-section: .block.block-feature
    .block-feature-icon: img(ng-src="/assets/img/features/icons/{{ $dir.feature.key }}.svg")
    .block-feature-info
        .block-feature-title
            span(ng-bind="$dir.feature.name")
            .block-feature-label.active(ng-if="$dir.feature.enabled") Actief

        .block-feature-details(ng-bind="$dir.feature.description")
        .block-feature-labels
            .block-feature-label(ng-repeat="label in $dir.feature.labels" ng-bind="label")

        .button-group
            .button.button-primary.button-sm(ng-click="$dir.openContactModal()") Contact opnemen
            .button.button-default.button-sm Helpcenter-artikelen bekijken
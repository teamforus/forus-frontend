.printable.printable-voucher-qr_code
    .printable-title(ng-if="$ctrl.voucher.type != 'product'") Uw {{ $ctrl.voucher.fund.name }}-voucher
    .printable-title(ng-if="$ctrl.voucher.type == 'product'") Uw {{ $ctrl.voucher.product.name }}-voucher
    br
    qr-code(qr-value="$ctrl.qrCodeValue" qr-type="voucher")
    .printable-description De verloopdatum van deze voucher is {{ $ctrl.voucher.expire_at_locale }}
    

doctype
html(lang="en")
    include ../tpl/directives/website/head
    body(ng-cloak ng-controller="BaseController" modal-scroll-breaker)
        if (qdt_c.platform.env_data.tagManagerId)
            noscript
                iframe(src="https://www.googletagmanager.com/ns.html?id=" + qdt_c.platform.env_data.tag_manager_id + "" height="0" width="0" style="display:none;visibility:hidden")
        div(ng-if='$ctrl.showHeader'): include ../tpl/directives/website/navbar
        ui-view
        div(ng-if='$ctrl.showFooter'): include ../tpl/directives/website/footer
        include includes/scripts
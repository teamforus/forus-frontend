header.app.app-header
    .wrapper
        a(href="./index.html").header-logo: img(src="./assets/img/forus-logo.svg").header-logo-img

        .header-auth
            .auth-user
                .auth-user-name info@rminds.nl
                .auth-user-role Sponsor
                img(src="./assets/img/organization-logo.jpg").auth-user-img
                .auth-user-menu
                    a(href="#").auth-user-menu-item
                        em.mdi.mdi-account
                        | My profile
                    a(href="#").auth-user-menu-item
                        em.mdi.mdi-settings
                        | Settings
                    .auth-user-menu-sep
                    a(href="#").auth-user-menu-item
                        em.mdi.mdi-logout
                        | Sign out
        .notifications
            .notifications-icon.mdi.mdi-bell
            .notifications-menu: .notifications-menu-inner
                .arrow-box: .arrow
                .notifications-menu-header 
                    | Notifications
                    .notifications-menu-header-link 
                        | View all
                        em.mdi.mdi-arrow-right 
                .notifications-menu-body.nano
                    .nano-content
                        mixin notification_item(icon, text, date)
                            .notifications-menu-item
                                img(src="./assets/img/note-icons/note-icon-" + icon + ".jpg").notifications-menu-item-icon
                                .notifications-menu-item-text=text
                                .notifications-menu-item-date=date
                        

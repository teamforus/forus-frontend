doctype
html(lang="nl" ng-controller="BaseController" ng-cloak)
    include includes/head

    body(
        ng-class="$root.layout" 
        modal-scroll-breaker printable-enabler)
        
        page-loading-bar
        
        div(ng-class="$root.viewLayout == 'landing' ? 'landing-root' : ''").ie-hide
            include includes/header

            ui-view

            div(ng-if="$root.viewLayout != 'landing'"): include includes/footer

            if (qdt_c.platform.env_data.chat_id)
                div(forus-chat ng-if="appConfigs.chat_id" chat-id="{{ appConfigs.chat_id }}")

            if (qdt_c.platform.env_data.support_id)
                forus-support(ng-if="appConfigs.support_id" support-id="{{ appConfigs.support_id }}")

        printables-root
        push-notifications
        toasts-root
        
        include includes/oldIe
        include includes/scripts

if (qdt_c.git_log_header) 
    | <!-- !{qdt_c.git_log_header} -->
